+@DefaultQualifier(NonNull.class)
+public final class LifecycleEventTypeProviderImpl extends LifecycleEventTypeProvider {
+
+    private final List<LifecycleEventType<?, ?, ?>> lifecycleEventTypes = new ArrayList<>();
