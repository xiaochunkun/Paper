+        this.lifecycleEventTypes.add(eventType);
+        return eventType;
+    }
+
+    @Override
+    public LifecycleEventManager<Plugin> createPluginLifecycleManager(final Plugin plugin) {
+        return new PaperLifecycleEventManager<>(plugin);
+    }
+}
